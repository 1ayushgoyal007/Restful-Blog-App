<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    
   <div class="ui fixed inverted menu" >
       <div class="ui container" >
           <div class="header item"> <i class="code icon" ></i> Blog Site</div>
           <a class="item"  href="/">Home</a>
           <a  class="item" href="/blogs/new">New Blog</a>
       </div>
       
   </div>




<h1 class="index-h1" >Write Blogs on edge cutting <strong>Technologies.</strong></h1>

<div class="mainContainer" >
    <h2></h2>
<%  for(var i=0;i<blogs.length;i++){ %>
    <div class="contain-blog" >
        <h2><%= blogs[i].title %></h2>
        <img class="each-image" src="<%= blogs[i].image %>" alt="Imgae">
        <span class="time" > <%= blogs[i].created %> </span>
        <p class="description" ><%= blogs[i].body.substring(0,100) %>.....</p>
        <a class="show-more" href="/blogs/ <%= blogs[i]._id %>">Show More</a>
    </div>
<% } %>
</div>
</body>
</html>



