<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    
    <div class="ui fixed inverted menu" >
        <div class="ui container" >
            <div class="header item"> <i class="code icon" ></i> Blog Site</div>
            <a class="item"  href="/">Home</a>
            <a  class="item" href="/blogs/new">New Blog</a>
        </div>
    </div>

    <div class="ui main text container segment" >
        <div class="ui huge header"> <%= blog.title  %>  </div>
        <div class="ui top attached " >
            <div class="item" >
                <img class="ui centered rounded image" src="<%= blog.image %>" alt="image">
                <div class="content" >
                    <span class="time" ><%= blog.created.toDateString()  %></span>
                </div>
                <div class="description" >
                    <p> <%- blog.body %></p>
                </div>
                <div class="flex-btns" >
                <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit"> Edit Post </a>
                <form action="/blogs/ <%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui red basic button " >  DELETE POST</button>
                </form>
                </div>
            </div>
            
        </div>
    </div>



</body>
</html>