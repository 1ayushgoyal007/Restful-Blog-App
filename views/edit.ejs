<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Blog</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>


    <div class="ui fixed inverted menu" >
        <div class="ui container" >
            <div class="header item"> <i class="code icon" ></i> Blog Site</div>
            <a class="item"  href="/">Home</a>
            <a  class="item" href="/blogs/new">New Blog</a>
        </div>
    </div>


    
    <div class="ui main text container segment " >
        <div class="ui huge header " > Edit <%= blog.title %></div>   
        <form class="ui form" action="/blogs/ <%= blog.id %>?_method=PUT" method="POST">
            <div class="field" >
                <label >Title</label>
                <input type="text" name="blog[title]" placeholder="title" value=" <%= blog.title %> " >
            </div>
            <div class="field" >
                <label >Image</label>
                <input type="text" name="blog[image]" placeholder="image" value=" <%= blog.image %> " >
            </div>
            <div class="field" >
                <label >Blog</label>
                <textarea name="blog[body]"  cols="30" rows="10"  > <%= blog.body %> </textarea>
            </div>

            <input type="submit" class="ui black basic button ">
        </form> 
    </div>



</body>
</html>